<h2>Create a new Meetup</h2>

<div id="new-meetup-form">
  <form action="<%= "/meetups/edit" + "#{@meetup_edit.id}" %>" method="post">
    <label for="name">Meetup Name:</label>
    <input type="text" id="name" name="meetup_edit[name]" value="<%= @meetup_edit.name %>">
    <br><label for="location">Location:</label>
    <input type="text" id="location" name="meetup_edit[location]" value="<%= @meetup_edit.location %>">
    <br><label for="description">Description:</label>
    <textarea  id="description" name="meetup_edit[description]"><%= @meetup_edit.description %></textarea>

    <br><input id="submit-meetup" type="submit" value="Change Meetup">

  </form>
</div>

<br><br><br><a href="/meetups"><h2>Back to all meetups</h2></a>
